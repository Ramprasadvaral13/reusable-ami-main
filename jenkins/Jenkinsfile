pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    // If you use Jenkins credentials store for AWS, uncomment below
    // AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
    // AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
  }

  stages {
    
    stage('Packer Build & Store AMI ID') {
      steps {
        dir('packer') {
          sh 'packer init ubuntu-golden-ami.pkr.hcl'
          sh './script/build_golden-ami.sh' // Script should store AMI in SSM
          // Optionally, archive manifest.json as build artifact
          archiveArtifacts artifacts: 'manifest.json', fingerprint: true
        }
      }
    }

    stage('Terraform Deploy (dev)') {
      steps {
        dir('terraform/environments/dev') {
          sh 'rm -rf .terraform'
          sh 'terraform init'
          sh 'terraform refresh'
          sh 'terraform apply -auto-approve'
        }
      }
    }
  }

  post {
    success {
      echo "✅ Golden AMI built, stored in SSM, and EC2 deployed via Terraform!"
    }
    failure {
      echo "❌ Pipeline failed. Check the logs for errors."
    }
  }
}






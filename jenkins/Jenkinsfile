pipeline {
  agent any

  environment {
    AWS_DEFAULT_REGION = 'us-east-1'
    // If you use Jenkins credentials store for AWS, uncomment below
    // AWS_ACCESS_KEY_ID = credentials('aws-access-key-id')
    // AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
  }

  stages {
    // Packer Build Stage
    stage('Packer Build & Store AMI ID') {
      steps {
        dir('packer') {
          sh 'packer init ubuntu-golden-ami.pkr.hcl'    // Initialize Packer
          sh './script/build_golden-ami.sh'             // Run your custom build script
          archiveArtifacts artifacts: 'manifest.json', fingerprint: true
        }
      }
    }

    // Terraform Deployment Stage
    stage('Terraform Deploy (dev)') {
      steps {
        dir('terraform/environments/dev') {
          sh 'rm -rf .terraform'                        // Clean previous terraform cache
          sh 'terraform init'                           // Initialize terraform environment
          sh 'terraform refresh'                        // Sync with current infrastructure state
          sh 'terraform apply -auto-approve'            // Apply the plan
        }
      }
    }
  }

  post {
    success {
      echo "✅ Golden AMI built, stored in SSM, and EC2 deployed via Terraform!"
    }
    failure {
      echo "❌ Pipeline failed. Check the logs for errors."
    }
  }
}
